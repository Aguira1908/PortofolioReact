{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./resources/js/src/*"]
    }
  },
  "include": [
    "resources/js/src/**/*",
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx"
  ],
  "exclude": ["node_modules", "vendor"]
}
